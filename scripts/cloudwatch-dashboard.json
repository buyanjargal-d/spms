{
  "widgets": [
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "SPMS/Application", "CPU_IDLE", { "stat": "Average" } ],
          [ ".", "CPU_IOWAIT", { "stat": "Average" } ]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "CPU Metrics",
        "yAxis": {
          "left": {
            "min": 0,
            "max": 100
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "SPMS/Application", "MEM_USED", { "stat": "Average" } ]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "Memory Usage",
        "yAxis": {
          "left": {
            "min": 0,
            "max": 100
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "SPMS/Application", "DISK_USED", { "stat": "Average" } ]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "Disk Usage",
        "yAxis": {
